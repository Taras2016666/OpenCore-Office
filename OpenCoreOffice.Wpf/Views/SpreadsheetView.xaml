<UserControl x:Class="OpenCoreOffice.Wpf.Views.SpreadsheetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" Background="#E0E0E0">
            <Button Content="Open" Margin="2" Click="Open_Click"/>
            <Button Content="Save" Margin="2" Click="Save_Click"/>
        </ToolBar>
        <DataGrid Margin="0,10,0,0" AutoGenerateColumns="True" Height="400"/>
    </DockPanel>
</UserControl>